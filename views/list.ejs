
   <%- include("header") -%>

    <div class="box" id="heading">
        <h1><%= listTitle %></h1>
    </div>

    <div class="box">
       <% newListItem.forEach(function(values) { %>
        <form action="/delete" method="post">
             <div class="item">
                <input type="checkbox" name="checkedItem" onChange="this.form.submit()" value="<%= values._id %>">
                <p><%= values.name %></p>
             </div> 
             <input type="hidden" name="hiddenName" value="<%= listTitle %>"></input>
        </form>            
       <% }); %>   

        <form class="item" action="/" method="post">
            <input type="text" name="newItem" placeholder="new item" autocomplete="off">
            <button type="submit" name="list" value="<%= listTitle %>">+</button>
        </form>
    </div>

    <%- include("footer") -%>